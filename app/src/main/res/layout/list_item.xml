<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorBackground"
    >

    <ImageView
        android:id="@+id/list_book_imageview"
        android:layout_width="79dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/turquoise_book"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/list_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Call of the Wild"
                android:maxLines="2"
                android:textSize="18sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/list_author_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jack London"
                    android:maxLines="1"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/list_selling_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - Â£ 4.99"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/list_quantity_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="44"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="In Stock"
                android:textAllCaps="true"
                android:textSize="8sp"/>
            <Button
                android:id="@+id/button_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="sell"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorAccent"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
